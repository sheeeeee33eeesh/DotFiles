# Change Window Focus
bindsym $mod+Ctrl+Left focus left
bindsym $mod+Ctrl+Down focus down
bindsym $mod+Ctrl+Up focus up
bindsym $mod+Ctrl+Right focus right

# Move Focused Window
bindsym $mod+Left move left
bindsym $mod+Down move down
bindsym $mod+Up move up
bindsym $mod+Right move right

# Change Splitting Action
bindsym $mod+h split h
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Resize Windows
bindsym $mod+Shift+Left resize shrink width 5 px or 5 ppt
bindsym $mod+Shift+Down resize grow height 5 px or 5 ppt
bindsym $mod+Shift+Up resize shrink height 5 px or 5 ppt
bindsym $mod+Shift+Right resize grow width 5 px or 5 ppt

# switch to workspace
bindsym $mod+Shift+1 workspace number $ws1
bindsym $mod+Shift+2 workspace number $ws2
bindsym $mod+Shift+3 workspace number $ws3
bindsym $mod+Shift+4 workspace number $ws4
bindsym $mod+Shift+5 workspace number $ws5
bindsym $mod+Shift+6 workspace number $ws6
bindsym $mod+Shift+7 workspace number $ws7
bindsym $mod+Shift+8 workspace number $ws8
bindsym $mod+Shift+9 workspace number $ws9
bindsym $mod+Shift+0 workspace number $ws10

# move focused container to workspace and switch to that workspace
bindsym $mod+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+9 move container to workspace number $ws9; workspace number $ws9
bindsym $mod+0 move container to workspace number $ws10; workspace number $ws10

# Move Container To Workspace
bindsym $mod+Ctrl+Shift+1 move container to workspace 1
bindsym $mod+Ctrl+Shift+2 move container to workspace 2
bindsym $mod+Ctrl+Shift+3 move container to workspace 3
bindsym $mod+Ctrl+Shift+4 move container to workspace 4
bindsym $mod+Ctrl+Shift+5 move container to workspace 5
bindsym $mod+Ctrl+Shift+6 move container to workspace 6
bindsym $mod+Ctrl+Shift+7 move container to workspace 7
bindsym $mod+Ctrl+Shift+8 move container to workspace 8
bindsym $mod+Ctrl+Shift+9 move container to workspace 9
bindsym $mod+Ctrl+Shift+0 move container to workspace 10
