# Allow auto tiling with dragging windows
tiling_drag modifier titlebar

# Set Font 
font pango: jetbrains mono nerd 12

# Setup Displays exec --no-startup-id autorandr normal

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- bash -c 'i3lock -tfei ~/.config/wallpapers/archgirl.png'

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
#exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet

# Start flameshot
exec --no-startup-id flameshot

#Allows Transparent Terminals
exec --no-startup-id compfy

#Mounts OneDrive
exec --no-startup-id rclone --vfs-cache-mode writes mount GoogleDrive: /mnt/CloudDrive

# RICE Startup Apps/wallpaper/Monitor Initiate
exec --no-startup-id "~/.config/i3/scripts/slideshowwallpaper.sh"

# Brightness Script
exec --no-startup-id "~/.config/i3/scripts/brightness.sh"

# Other Script


# Startup Discord MInimized
exec --no-startup-id discord-canary --start-minimized



# Set Brightness 100%
 exec --no-startup-id sudo light -S 100

