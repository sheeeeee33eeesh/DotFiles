   "format-icons": ["Û∞§Ø","Û∞§ü","Û∞§¢","Û∞§•","Û∞§®"]
  },

  // Performance Group Config
  "group/performance": {
    "orientation": "horizontal",
    "modules": [
     "cpu",
     "memory",
     "disk"
    ]
  },

  // CPU Config
  "cpu": {
    "format": "Ôãõ {usage}%",
    "tooltip": false
  },

  // Memory Config
  "memory": {
    "format": "ÔÉâ {used}GiB"
  },

  // Disk Config
  "disk": {
    "format": "üñ¥ {free}",
    "path": "/"

  // Brightness / Backlight Config
  },
  "backlight" : {
   "format": "Û∞õ® {}%"
  },

  // Battery Config
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôóß",
